<!-- octoprint_failuredetector/templates/failuredetector_tab.jinja2 (With Thumbnails and Pagination) -->
<div id="tab_failuredetector" class="container-fluid">
    <div class="row-fluid">
        <div class="span7">
            <h4>Latest Analyzed Frame</h4>
            <div class="webcam_container" style="background-color: #222; margin-bottom: 10px; text-align: center; padding: 10px; border-radius: 4px; min-height: 200px;">
                <!-- ko if: snapshotUrlWithCacheBuster -->
                <img data-bind="attr: { src: snapshotUrlWithCacheBuster }" style="width: 100%; border-radius: 4px;" />
                <!-- /ko -->
                <!-- ko ifnot: snapshotUrlWithCacheBuster -->
                <div style="color: #666; padding-top: 25%;">
                    <i class="fa fa-camera fa-4x"></i>
                    <p style="margin-top: 10px;">Snapshot appears here after a check.</p>
                </div>
                <!-- /ko -->
            </div>
        </div>
        <div class="span5">
            <h4>Status</h4>
            <p style="font-size: 1.2em;"><i class="fa fa-eye" data-bind="style: { color: statusColor }, css: { 'fa-spin': isChecking }"></i> <strong data-bind="text: statusText"></strong></p>
            <hr>
            <h4>Most Recent Confidence</h4>
            <p data-bind="text: lastResultText" style="font-size: 1.1em;"></p>
            <hr>
            <h4>Controls</h4>
            <button class="btn btn-primary btn-block" data-bind="click: forceCheck, enable: !isChecking()"> Force Failure Check Now</button>
        </div>
    </div>

    <div class="row-fluid" style="margin-top: 20px;">
        <div class="span12">
            <h3>Recorded Timelapses</h3>
            <p>Select a previously recorded timelapse to report an outcome for the community dataset.</p>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width: 120px;">Thumbnail</th>
                        <th>Filename</th>
                        <th style="width: 100px;">Size (MB)</th>
                        <th style="width: 180px;">Actions</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: paginatedTimelapses">
                    <tr>
                        <td>
                            <img data-bind="attr: {src: thumbnail_url}" style="width: 120px; height: auto; border-radius: 4px; background-color: #222;" />
                        </td>
                        <td data-bind="text: name" style="word-break: break-all;"></td>
                        <td data-bind="text: size_mb"></td>
                        <td>
                            <button class="btn btn-primary" data-bind="click: $parent.reportFailureForTimelapse">
                                <i class="fa fa-flag"></i> Report Outcome
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
            
            <div class="pagination pagination-centered">
                <ul>
                    <li data-bind="css: { disabled: !canGoPrevious() }">
                        <a href="#" data-bind="click: previousPage">« Previous</a>
                    </li>
                    <li>
                        <span style="color: #fff;">Page <strong data-bind="text: currentPage() + 1"></strong> of <strong data-bind="text: totalPages"></strong></span>
                    </li>
                    <li data-bind="css: { disabled: !canGoNext() }">
                        <a href="#" data-bind="click: nextPage">Next »</a>
                    </li>
                </ul>
            </div>
            
            <button class="btn" data-bind="click: refreshTimelapseList"><i class="fa fa-refresh"></i> Refresh List</button>
        </div>
    </div>
</div>
