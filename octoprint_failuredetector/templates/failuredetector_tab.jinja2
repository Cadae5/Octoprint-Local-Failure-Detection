<!-- octoprint_failuredetector/templates/failuredetector_tab.jinja2 (Final Version) -->

<div id="tab_failuredetector">

    <div class="row-fluid">
        <div class="span12">
            <!-- This container will now show a placeholder if no snapshot is available -->
            <div class="webcam_container" style="background-color: #222; margin-bottom: 10px; text-align: center; padding: 20px; border-radius: 4px;">
                
                <!-- This part shows ONLY if a snapshot URL exists -->
                <!-- ko if: snapshotUrlWithCacheBuster -->
                <img data-bind="attr: { src: snapshotUrlWithCacheBuster }" style="width: 100%; border-radius: 4px;" />
                <!-- /ko -->

                <!-- This part shows ONLY if NO snapshot URL exists yet -->
                <!-- ko ifnot: snapshotUrlWithCacheBuster -->
                <div style="color: #666; padding: 100px 0;">
                    <i class="fa fa-camera fa-4x"></i>
                    <p style="margin-top: 10px;">The latest snapshot will appear here after a check.</p>
                </div>
                <!-- /ko -->
                
            </div>
        </div>
    </div>

    <!-- (The rest of the file for controls and status remains unchanged) -->
    <div class="row-fluid">
        <!-- ... (the h3, hr, Status, Last Check, and Controls sections are the same) ... -->
    </div>

</div>
