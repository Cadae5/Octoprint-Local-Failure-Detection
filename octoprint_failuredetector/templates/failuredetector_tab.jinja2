<!-- --- NEW: Section for Recorded Timelapses --- -->
<div class="row-fluid" style="margin-top: 20px;">
    <div class="span12">
        <h3>Recorded Timelapses</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Filename</th>
                    <th>Size (MB)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: recordedTimelapses">
                <tr>
                    <td data-bind="text: name"></td>
                    <td data-bind="text: size_mb"></td>
                    <td>
                        <button class="btn btn-primary" data-bind="click: $parent.reportFailureForTimelapse">
                            <i class="fa fa-flag"></i> Report Outcome
                        </button>
                    </td>
                </tr>
            </tbody>
        </div>
        </table>
        <button class="btn" data-bind="click: refreshTimelapseList"><i class="fa fa-refresh"></i> Refresh List</button>
    </div>
</div>
